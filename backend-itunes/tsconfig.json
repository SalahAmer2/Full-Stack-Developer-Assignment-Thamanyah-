{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020", // or ES2021, ES2019 â€” just not ES2023
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src", // Only compile code from src/
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "../frontend-itunes", // Exclude frontend
    "../frontend-itunes/my-project", // Exclude nested frontend
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.tsx",
    "**/*.jsx"
  ],
  "include": [
    "src"
  ]
}