generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Podcast {
  id            Int     @id @default(autoincrement())
  trackId       BigInt   @unique   // ✅ change from Int → BigInt
  trackName     String
  artistName    String
  feedUrl       String?   @db.Text
  artworkUrl600  String?
  releaseDate   DateTime?
  audioUrl      String?   @db.Text   // ✅ New field for preview/episode URL

  queues     Queue[]
  favorites  Favorite[]
  recents    Recent[]
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  queue     Queue[]
  favorites Favorite[]
  recents   Recent[]
}

model Queue {
  id        Int      @id @default(autoincrement())
  userId    Int
  podcastId BigInt   @unique   // ✅ change from Int → BigInt
  createdAt DateTime @default(now())

  user     User    @relation(fields: [userId], references: [id])
  podcast  Podcast @relation(fields: [podcastId], references: [trackId]) //changed references: [id] to trackId, new code shows that 

  @@unique([userId, podcastId], name: "userId_podcastId")
}

model Favorite {
  id        Int      @id @default(autoincrement())
  userId    Int
  podcastId BigInt   @unique   // ✅ change from Int → BigInt
  createdAt DateTime @default(now())

  user     User    @relation(fields: [userId], references: [id])
  podcast  Podcast @relation(fields: [podcastId], references: [trackId]) //changed references: [id] to trackId, new code shows that

  @@unique([userId, podcastId], name: "userId_podcastId")
}

model Recent {
  id        Int      @id @default(autoincrement())
  userId    Int
  podcastId BigInt   @unique   // ✅ change from Int → BigInt
  createdAt DateTime @default(now())

  user     User    @relation(fields: [userId], references: [id])
  podcast  Podcast @relation(fields: [podcastId], references: [trackId]) //was already trackId, interesting

  @@unique([userId, podcastId], name: "userId_podcastId") // ensure uniqueness per user
}